<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Generic Record Form</masterLabel>
    <targets>
        <target>lightning__RecordPage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage, lightningCommunity__Default">
            <property label="Record Id" name="recordId" type="String" />
            <property label="Object Api Name" name="objectApiName" type="String" />
            <property label="Record Type Id" name="recordTypeId" type="String" />
            <property label="Field Api Names" name="fieldApiNames" type="String" />
            <property label="Layout Type" name="layoutType" type="String" datasource=", Full, Compact"/>
            <property label="Columns" name="columns" type="Integer" default="2"/>
            <property label="Mode" name="mode" type="String" datasource="view, edit, readonly" default="view"/>
            <property label="Density" name="density" type="String" datasource="auto, comfy, compact" default="auto"/>
            <property label="Title" name="title" type="String" />
            <property
                label="Icon Name"
                name="iconName"
                type="String"
                description="Please specify the name of the SLDS icon in the format type:name"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>