{
  "trailingComma": "none",
  "singleQuote": true,
  "plugins": [
    "prettier-plugin-apex"
  ],
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": {
        "tabWidth": 4,
        "parser": "lwc"
      }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": {
        "parser": "html",
        "tabWidth": 4
      }
    },
    {
      "files": "**/*.{cls,trigger,apex}",
      "options": {
        "apexInsertFinalNewline": false,
        "tabWidth": 4
      }
    }
  ]
}
